<section class="auth-center">
  <h1 class="page-title"><%= title %></h1>

  <%- messages() %>

  <section class="auth-card">
    <form class="auth-form" method="post" action="/account/register">
      <div class="form-row">
        <label for="account_firstname">First name</label>
        <input id="account_firstname" name="account_firstname" type="text" placeholder="First name" required>
      </div>

      <div class="form-row">
        <label for="account_lastname">Last name</label>
        <input id="account_lastname" name="account_lastname" type="text" placeholder="Last name" required>
      </div>

      <div class="form-row">
        <label for="account_email">Email address</label>
        <input id="account_email" name="account_email" type="email" autocomplete="username" placeholder="you@example.com" required>
      </div>

      <div class="form-row">
        <label for="account_password">Password</label>
        <input id="account_password" name="account_password" type="password" autocomplete="new-password" placeholder="Create a strong password" required>
        <small class="field-hint">Min 12 chars, at least 1 capital letter, 1 number, 1 special character.</small>
      </div>

      <div class="form-actions">
        <button class="btn" type="submit">Register</button>
      </div>
    </form>
  </section>
</section>
