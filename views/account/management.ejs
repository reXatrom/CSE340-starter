<section class="auth-center">
  <h1 class="page-title"><%= title %></h1>

  <%- messages() %>

  <% if (errors) { %>
    <ul class="notice">
    <% errors.array && errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
    </ul>
  <% } %>

  <section class="auth-card">
    <% if (typeof accountData !== 'undefined') { %>
      <h2>Welcome <%= accountData.account_firstname %></h2>

      <% if (accountData.account_type === 'Client') { %>
        <!-- Client-specific content -->
      <% } else if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
        <section class="account-management-links">
          <a href="/inv/" class="inventory-link" title="Manage inventory">Access Inventory Management</a>
          <a href="/account/update/<%= accountData.account_id %>" class="account-link" title="Update your account information">Update Account Information</a>
        </section>
      <% } %>
    <% } else { %>
      <p>You're logged in.</p>
    <% } %>
  </section>
</section>
