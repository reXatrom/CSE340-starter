<!-- User Reviews View Content Only (uses shared layout) -->

<!-- The Content Heading -->
<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<!-- User Reviews Section -->
<section class="user-reviews">
  <h2>My Reviews</h2>

  <%- messages() %>

  <% if (reviews && reviews.length > 0) { %>
    <div class="reviews-grid">
      <% reviews.forEach(review => { %>
        <div class="review-card">
          <div class="review-header">
            <div class="vehicle-info">
              <h3><%= review.inv_year %> <%= review.inv_make %> <%= review.inv_model %></h3>
              <div class="review-meta">
                <span class="review-date">Reviewed on <%= new Date(review.review_date).toLocaleDateString() %></span>
              </div>
            </div>
            <div class="review-rating">
              <% for (let i = 1; i <= 5; i++) { %>
                <span class="star <%= i <= review.review_rating ? 'filled' : '' %>">‚≠ê</span>
              <% } %>
              <span class="rating-text">(<%= review.review_rating %>/5)</span>
            </div>
          </div>

          <div class="review-content">
            <p><%= review.review_text %></p>
          </div>

          <div class="review-actions">
            <a href="/reviews/edit/<%= review.review_id %>?inv_id=<%= review.inv_id %>&rating=<%= review.review_rating %>&text=<%= encodeURIComponent(review.review_text) %>" class="btn btn-small">Edit</a>
            <a href="/reviews/delete/<%= review.review_id %>?inv_id=<%= review.inv_id %>" class="btn btn-small btn-danger" onclick="return confirm('Are you sure you want to delete this review?')">Delete</a>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="no-reviews">
      <p>You haven't written any reviews yet.</p>
      <p><a href="/inv/" class="btn">Browse Vehicles to Review</a></p>
    </div>
  <% } %>
</section>
