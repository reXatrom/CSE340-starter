<section class="container">
  <h1 class="page-title"><%= title %></h1>

  <%- messages() %>

  <% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
    </ul>
  <% } %>

  <section class="auth-card">
    <form class="auth-form" method="post" action="/inv/add-classification">
      <div class="form-row">
        <label for="classification_name">New Classification Name</label>
        <small class="field-hint">Only letters and numbers. No spaces or special characters.</small>
        <input id="classification_name" name="classification_name" type="text" required pattern="[A-Za-z0-9]+" title="Only letters and numbers. No spaces or special characters." value="<%= locals.classification_name %>">
      </div>

      <div class="form-actions">
        <button class="btn" type="submit">Add Classification</button>
      </div>
    </form>
  </section>
</section>
