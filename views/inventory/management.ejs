<section class="container">
  <h1 class="page-title"><%= title %></h1>

  <%- messages() %>

  <section class="auth-card">
    <p>Use the options below to manage inventory data.</p>
    <div class="form-actions">
      <a class="btn" href="/inv/add-classification">Add New Classification</a>
      <a class="btn" href="/inv/add-inventory">Add New Inventory</a>
    </div>

    <h2>Manage Inventory</h2>
    <p>Select a classification from the list to see the items belonging to the classification.</p>

    <div class="form-row inventory-classification-section" style="margin-top:1rem;">
      <label for="classificationList">View Inventory by Classification</label>
      <%- classificationList %>
    </div>

    <table id="inventoryDisplay"></table>
    <noscript>JavaScript must be enabled to use this page.</noscript>
    <script src="../../js/inventory.js"></script>
  </section>
</section>
